/* To learn more about this file see: https://angular.io/config/tsconfig. */
{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./out-tsc",
    "sourceMap": true,
    "declaration": false,
    "module": "es2020",
    "moduleResolution": "node",
    "target": "es2015",
    "lib": ["es2018", "dom"]
  },
  "files": [
    "src/main.ts",
    "src/polyfills.ts"  // Explicitly include `polyfills.ts`
  ],
  "include": [
    "src/**/*.d.ts"
  ]
}
